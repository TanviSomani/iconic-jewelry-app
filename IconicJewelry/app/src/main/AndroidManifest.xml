<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.iconicjewelry">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IconicJewelry">
        <activity android:name=".PrivacyPolicyActivity"></activity>
        <activity android:name=".TermsOfUseActivity" />
        <activity android:name=".ReturnsActivity" />
        <activity android:name=".ShowGiftSetActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".CheckoutActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".WishlistActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".SelectProductTypeActivity" />
        <activity android:name=".ShowProductsActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".CustomizeActivity" />
        <activity android:name=".ProductsActivity" />
        <activity android:name=".Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
    </application>

</manifest>